@model BugTracker.ViewModels.ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutUnauthorized.cshtml";
    ViewBag.Title = "Reset password";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Reset Your Password</h3>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = @Html.NameFor(m => m.Email), autofocus = "" })
                    </div>
                    <div class="form-group">

                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = @Html.NameFor(m => m.Password) })
                    </div>
                    <div class="form-group">

                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = @Html.NameFor(m => m.ConfirmPassword) })
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-default" value="Reset" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
