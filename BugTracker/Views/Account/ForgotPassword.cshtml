@model BugTracker.ViewModels.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutUnauthorized.cshtml";
    ViewBag.Title = "Forgot your password?";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Reset Your Password</h3>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = @Html.NameFor(m => m.Email), autofocus = "" })
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-default btn-block" value="Email Link" />
                    </div>
                    @Html.ActionLink("Back to Login", "Login")
                }

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
            </div>
        </div>
    </div>
</div>
