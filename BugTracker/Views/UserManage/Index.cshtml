@model IEnumerable<BugTracker.ViewModels.UserRoleViewModel>
@{
    ViewBag.Title = "Manage Users";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="panel panel-success">
            <div class="panel-heading">
                User List
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th class="name">
                                    @Html.DisplayNameFor(m => m.DisplayName)
                                </th>
                                <th class="username">
                                    @Html.DisplayNameFor(m => m.UserName)
                                </th>
                                @foreach (var item in ViewBag.Roles)
                                {
                                    <th class="role">
                                        @item
                                    </th>
                                }
                                <th class="edit"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="name">
                                        @Html.DisplayFor(m => item.DisplayName)
                                    </td>
                                    <td class="username col-lg-1">
                                        @Html.DisplayFor(m => item.UserName)
                                    </td>
                                    @foreach (var role in item.Roles)
                                    {
                                        <td class="role">
                                            @if (role.Value)
                                            {
                                                <i class="fas fa-check green"></i>
                                            }
                                        </td>
                                    }
                                    <td class="edit">
                                        <a href=@Url.Action("ChangeUserRole", new { id = item.Id }) title="Edit Roles">
                                            <i class="fas fa-user-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>



