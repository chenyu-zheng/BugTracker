@model BugTracker.ViewModels.UserRoleViewModel
@{
    ViewBag.Title = "Edit Roles";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-success">
            <div class="panel-heading">
                <i class="fas fa-user orange"></i>
                @Html.DisplayFor(m => m.DisplayName)
                &emsp;&emsp;
                <i class="fas fa-at green"></i>
                @Html.DisplayFor(m => m.UserName)
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("ChangeUserRole", "UserManage", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    foreach (var role in Model.Roles)
                    {
                        <label class="checkbox-inline checkbox-container role-checkbox">
                            @role.Key
                            @Html.CheckBoxFor(m => m.Roles[role.Key])
                            <span class="checkmark"></span>
                        </label>
                    }
                    <hr />
                    <input type="submit" class="btn btn-default" value="Submit" />
                }
            </div>
        </div>
    </div>
</div>
