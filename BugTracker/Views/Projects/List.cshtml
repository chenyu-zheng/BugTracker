@model IEnumerable<BugTracker.ViewModels.ProjectViewModel>

@{
    ViewBag.Title = $"{ViewBag.Type} Projects";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-10">
        <div class="panel panel-info">
            <div class="panel-heading">
                @if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
                {
                    <a href=@Url.Action("Create") title="Create Project">
                        <i class="fas fa-plus fa-fw"></i> Create
                    </a>
                }
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(m => m.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.NumberOfMembers)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.NumberOfTickets)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.Created)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(m => m.Updated)
                                </th>
                                @if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
                                {
                                    <th></th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => item.NumberOfMembers)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(m => item.NumberOfTickets)
                                    </td>
                                    <td>
                                        @item.Created.ToString("yy-MM-dd HH:mm")
                                    </td>
                                    <td>
                                        @if (item.Updated.HasValue)
                                        {
                                            @item.Updated.GetValueOrDefault().ToString("yy-MM-dd HH:mm")
                                        }
                                    </td>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
                                    {
                                        <th>
                                            <a href=@Url.Action("ChangeMember", new { id = item.Id }) title="Edit Members">
                                                <i class="fas fa-user-friends"></i>
                                            </a>
                                            &emsp;
                                            <a href=@Url.Action("Edit", new { id = item.Id }) title="Edit Project">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </th>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>