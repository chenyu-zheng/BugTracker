@model BugTracker.ViewModels.ProjectViewModel

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.DisplayFor(m => m.Name)
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <p>
                    @Html.RawSafe(Model.Description)
                </p>
                <p>
                    <i class="fas fa-user-friends orange"></i>&nbsp;
                    @Html.DisplayNameFor(m => m.NumberOfMembers)
                    @Html.DisplayFor(m => m.NumberOfMembers)
                    &emsp;
                    <i class="fas fa-file-alt red"></i>&nbsp;
                    @Html.DisplayNameFor(m => m.NumberOfTickets)
                    @Html.DisplayFor(m => m.NumberOfTickets)
                </p>
                <hr />
                <p class="text-danger">
                    Are you sure you want to delete this?
                </p>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Delete" class="btn btn-danger" />
                }
            </div>
        </div>
    </div>
</div>

